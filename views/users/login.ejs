<% layout("layouts/boilerplate") %>

<section class="login-page d-flex align-items-center justify-content-center mb-4">
  <div class="login-card">

    <!-- Header -->
    <div class="login-header text-center mb-4">
      <h2 class="login-title">Welcome Back!</h2>
      <p class="login-subtitle">
        Log in to continue exploring Campora
      </p>
    </div>

    <!-- Form -->
    <form action="/login" method="POST" class="validation-form" novalidate>

      <div class="mb-3">
        <label class="form-label">Username</label>
        <input
          type="text"
          name="username"
          class="form-control form-control-lg"
          placeholder="Enter your username"
          required
        >
        <div class="invalid-feedback">
          Username is required
        </div>
      </div>

      <div class="mb-4">
        <label class="form-label">Password</label>
        <input
          type="password"
          name="password"
          class="form-control form-control-lg"
          placeholder="Enter your password"
          required
        >
      </div>

      <!-- CTA -->
      <button class="btn login-btn w-100 mb-3">
        Log In
      </button>

      <!-- Footer -->
      <p class="text-center login-footer">
        New to Campora?
        <a href="/register">Create an account</a>
      </p>

    </form>
  </div>
</section>
